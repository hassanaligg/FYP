<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>

            <solid
                android:color="#0000" />

            <stroke
                android:width="1dp"
                android:color="#0000" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <!--     #2196f3-->
            <gradient
                android:startColor="#424242"
                android:endColor="#0d47a1"
                android:angle="360" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>